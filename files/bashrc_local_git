function local-git {
  REPO="${1}"
  if [ -z "${REPO}" ]
  then
    REPO="${PWD}"
  fi
  if [ -d "${REPO}/.git" ]
  then
    if [ -f /home/student/workstation-vm/git_playbook.yml ]
    then
      ansible-playbook /home/student/workstation-vm/git_playbook.yml -i /home/student/workstation-vm/inventory -e scope=local -e repo=${REPO}
    else
      echo "ERROR: Playbook /home/student/workstation-vm/git_playbook.yml does not exist." 1>&2
    fi
  else
    echo "ERROR: ${REPO} is not a git repository." 1>&2
  fi
}
